<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loan_bg"
    android:orientation="vertical">

    <com.two.emergencylending.view.Topbar
        android:id="@+id/add_contact_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:paddingLeft="10dp"
        custom:iv_left="@drawable/back"
        custom:leftBackground="@drawable/button_bg"
        custom:leftTextColor="@color/black"
        custom:leftTextSize="@dimen/title_left_size"
        custom:mytitle="联系人"
        custom:mytitleTextColor="@color/black"
        custom:mytitleTextSize="@dimen/title_size"
        custom:rightBackground="@drawable/button_bg"
        custom:rightTextColor="@color/black"
        custom:rightTextSize="@dimen/title_right_size" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/loan_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/loan_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/contacts_add"
                    android:textColor="@color/register_hint"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/spacestyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/start"
                    android:text="联系人"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_contact_linkman"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/transparent"
                    android:inputType="text"
                    android:maxLength="10"
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/spacestyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/start"
                    android:text="联系电话"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_contact_phonenum"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/transparent"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />


            <LinearLayout
                android:id="@+id/ll_relation"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/spacestyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/start"
                    android:text="关系"
                    android:textColor="@color/name"
                    android:textSize="14sp" />
                <!--                &#160;&#160;关系&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;-->
                <TextView
                    android:id="@+id/tv_add_contact_relavite"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_relation"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_forward" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />

            <LinearLayout
                android:id="@+id/ll_contact_Name"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/spacepadding18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系名义"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_contacts_name"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_forward" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/spacepadding18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="紧急联系人"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mergency_eontact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/mergency_eontact_type"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/mergency_eontact_type"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/switch_off" />
                />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/loan_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="24dp"
                    android:text="补充更多单位信息可提高审核通过率"
                    android:textColor="@color/register_hint"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_unitInfo"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/switch_off" />
                />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_supplunit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        style="@style/spacepadding14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="单位信息"
                        android:textColor="@color/name"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/add_department_address"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/add_address"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:text=""
                            android:textColor="#008fff"
                            android:textColorHint="#b3b3b3"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/iv_add_address_type"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/switch_off"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/register_line" />

                <LinearLayout
                    android:id="@+id/ll_unitinfor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/ll_family"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/spacepadding18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="家庭地址"
                            android:textColor="@color/name"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_family_address"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:gravity="left|center"
                            android:inputType="text"
                            android:text=""
                            android:textColor="@color/title"
                            android:textColorHint="#b3b3b3"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/iv_family_address"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_forward"
                            android:visibility="visible" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/register_line" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/spacepadding18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="详细地址"
                            android:textColor="@color/name"
                            android:textSize="14sp"
                            android:visibility="invisible" />

                        <EditText
                            android:id="@+id/ed_family_detail_address"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:hint="详细地址"
                            android:inputType="text"
                            android:padding="6dp"
                            android:text=""
                            android:maxLength="20"
                            android:textColor="@color/title"
                            android:textColorHint="#b3b3b3"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/register_line" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            style="@style/spacepadding18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="家庭固话"
                            android:textColor="@color/name" />

                        <EditText
                            android:id="@+id/ed_family_districtNum"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="区号"
                            android:inputType="number"
                            android:padding="5dp"
                            android:maxLength="4"
                            android:textColor="@color/title"
                            android:textColorHint="#b3b3b3"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_dash" />

                        <EditText
                            android:id="@+id/ed_family_contact_phonenum"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="单位电话"
                            android:inputType="number"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:maxLength="10"
                            android:textColor="@color/title"
                            android:textColorHint="#b3b3b3"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@color/register_line_light" />


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/spacepadding18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="单位名称"
                            android:textColor="@color/name"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/contact_unit_name"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:inputType="text"
                            android:text=""
                            android:maxLength="15"
                            android:textColor="@color/title"
                            android:textColorHint="#b3b3b3"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/iv_unit_name"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_forward"
                            android:visibility="gone" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/register_line" />

                    <LinearLayout
                        android:id="@+id/ll_address"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/spacepadding18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="单位地址"
                            android:textColor="@color/name"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/contact_unit_address"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:gravity="left|center"
                            android:inputType="text"
                            android:text=""
                            android:textColor="@color/title"
                            android:textColorHint="#b3b3b3"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/iv_unit_address"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_forward"
                            android:visibility="visible" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/register_line" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/spacepadding18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="详细地址"
                            android:textColor="@color/name"
                            android:textSize="14sp"
                            android:visibility="invisible" />

                        <EditText
                            android:id="@+id/contact_unit_detail_address"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:hint="详细地址"
                            android:inputType="text"
                            android:padding="6dp"
                            android:maxLength="20"
                            android:text=""
                            android:textColor="@color/title"
                            android:textColorHint="#b3b3b3"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/register_line" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            style="@style/spacepadding18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="单位电话"
                            android:textColor="@color/name" />

                        <EditText
                            android:id="@+id/contact_unit_districtnum"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="区号"
                            android:inputType="number"
                            android:padding="5dp"
                            android:maxLength="4"
                            android:textColor="@color/title"
                            android:textColorHint="#b3b3b3"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_dash" />

                        <EditText
                            android:id="@+id/ed_contact_unit_phonenum"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="单位电话"
                            android:inputType="number"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:maxLength="10"
                            android:textColor="@color/title"
                            android:textColorHint="#b3b3b3"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@color/register_line_light" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>