<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loan_bg">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/loan_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mine_title"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:background="@drawable/bg_me"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <RelativeLayout
                    android:id="@+id/title_setting"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="3dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">

                        <ImageView
                            android:id="@+id/mine_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="15dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="15dp"
                            android:src="@drawable/icon_qrcode" />

                        <ImageView
                            android:id="@+id/home_message_center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_message" />

                        <TextView
                            android:id="@+id/home_message_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/shape_circle_red"
                            android:gravity="center"
                            android:minWidth="17dp"
                            android:padding="1dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </RelativeLayout>

                <com.two.emergencylending.view.CircleImageView
                    android:id="@+id/head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_default" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/phone_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_customer_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/title_bg"
                        android:drawableLeft="@drawable/icon_manager"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:text="客户经理"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_performance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular_bg"
                android:gravity="center"
                android:padding="6dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/icon_performance"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="我的业绩"
                    android:textColor="@color/title"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/icon_forwardh"
                    android:text="查看详情"
                    android:textColor="@color/tab_blue" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular_bg"
                android:gravity="center"
                android:padding="6dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/icon_apply"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="我的录件"
                    android:textColor="@color/title"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/icon_forward"
                    android:text=""
                    android:textColor="@color/tab_blue" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular_bg"
                android:gravity="center"
                android:padding="6dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/icon_file"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="个人资料"
                    android:textColor="@color/title"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/icon_forward"
                    android:textColor="@color/tab_blue" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_loan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_loan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="6dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/icon_myloan"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:text="我的借款"
                        android:textColor="@color/title"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:drawablePadding="3dp"
                        android:drawableRight="@drawable/icon_forward"
                        android:textColor="@color/tab_blue" />
                </RelativeLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="50dp"
                    android:background="@color/register_line" />

                <RelativeLayout
                    android:id="@+id/rl_repayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="6dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/icon_repay"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:text="我要还款"
                        android:textColor="@color/title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView6"
                        android:layout_alignBottom="@+id/textView6"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="6dp"
                        android:drawablePadding="3dp"
                        android:drawableRight="@drawable/icon_forward"
                        android:textColor="@color/tab_blue" />
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_earning_bonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular_bg"
                android:gravity="center"
                android:padding="6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/icon_share"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="赚钱奖金"
                    android:textColor="@color/title"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/icon_forward"
                    android:textColor="@color/tab_blue" />
            </RelativeLayout>


            <RelativeLayout

                android:id="@+id/rl_my_winnings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular_bg"
                android:gravity="center"
                android:padding="6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/icon_bonus"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="我的奖金"
                    android:textColor="@color/title"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/icon_forward"
                    android:textColor="@color/tab_blue" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/set_hegi"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular_bg"
                android:gravity="center"
                android:padding="6dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/icon_setup"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="设置"
                    android:textColor="@color/title"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/icon_forward"
                    android:textColor="@color/tab_blue" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>