<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loan_bg"
    android:orientation="vertical">

    <com.two.emergencylending.view.Topbar
        android:id="@+id/contact_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:paddingLeft="10dp"
        custom:iv_left="@drawable/back"
        custom:leftBackground="@drawable/button_bg"
        custom:leftTextColor="@color/black"
        custom:leftTextSize="@dimen/title_left_size"
        custom:mytitle="联系人"
        custom:mytitleTextColor="@color/black"
        custom:mytitleTextSize="@dimen/title_size"
        custom:rightBackground="@drawable/button_bg"
        custom:rightTextColor="@color/black"
        custom:rightTextSize="@dimen/title_right_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/contacts_ts"
        android:textColor="@color/register_hint"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/contact_urgent"
        android:layout_width="fill_parent"
        android:layout_height="86dp"
        android:layout_margin="10dp"
        android:background="@drawable/contant_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/urgent_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#333333"
                android:text="" />

            <TextView
                android:id="@+id/tv_relatives1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/start"
                android:text="亲属"
                android:textColor="#666666"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/urgent_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="添加"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:textColor="#cccccc"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/urgent"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/urgent_contant_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="联系电话:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/urgent_contant_phonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:text="紧急联系人"
                
                android:textColor="@color/red"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativet_add"
        android:layout_width="fill_parent"
        android:layout_height="86dp"
        android:layout_margin="10dp"
        android:background="@drawable/contant_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/relative_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_relatives2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/start"
                android:text="亲属"
                android:textColor="#666666"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/relativet_add_"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="添加"
            android:textColor="#cccccc"
            android:textSize="14sp" />
        <LinearLayout
            android:id="@+id/relativet"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="联系电话:" />

            <TextView
                android:id="@+id/relativet_contant_phonenum"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="" />
        </LinearLayout>
        </LinearLayout>
  
    </LinearLayout>

    <LinearLayout
        android:id="@+id/friend_or_colleague_add"
        android:layout_width="fill_parent"
        android:layout_height="86dp"
        android:layout_margin="10dp"
        android:background="@drawable/contant_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/friend_or_colleague_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#333333"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_friend_colleague"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/start"
                android:text="同事"
                android:textColor="#666666"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/friend_or_colleague_add_"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="添加"
            android:textColor="#cccccc"
            android:textSize="14sp" />
        <LinearLayout
            android:id="@+id/friend_or_colleague"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="联系电话:" />

            <TextView
                android:id="@+id/friend_or_colleague_phonenum"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_colleague"
        android:layout_width="fill_parent"
        android:layout_height="86dp"
        android:layout_margin="10dp"
        android:background="@drawable/contant_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_colleague_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#333333"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_colleague"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="朋友"
                android:drawableLeft="@drawable/start"
                android:textColor="#666666"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_add_colleague"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="添加"
                android:textColor="#cccccc"
                android:textSize="14sp" />
            <LinearLayout
                android:id="@+id/ll_show_colleague"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="联系电话:" />

                <TextView
                    android:id="@+id/tv_show_colleague_phonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="bottom"
        android:text="@string/confirmation_of_information"
        android:textColor="@color/register_hint"
        android:textSize="10sp" />
</LinearLayout>
