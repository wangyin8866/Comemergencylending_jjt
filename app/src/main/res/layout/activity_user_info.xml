<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loan_bg"
    android:orientation="vertical">

    <com.two.emergencylending.view.Topbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:paddingLeft="10dp"
        custom:iv_left="@drawable/back"
        custom:leftBackground="@drawable/button_bg"
        custom:leftTextColor="@color/black"
        custom:leftTextSize="@dimen/title_left_size"
        custom:mytitle="个人资料"
        custom:mytitleTextColor="@color/black"
        custom:mytitleTextSize="@dimen/title_size"
        custom:rightBackground="@drawable/button_bg"
        custom:rightTextColor="@color/black"
        custom:rightTextSize="@dimen/title_right_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center|left"
        android:padding="15dp"
        
        android:text="@string/user_info_title"
        android:textColor="@color/register_hint"
        android:textSize="12sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/start"
                    android:minEms="6"
                    android:text="姓名"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_personal_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/transparent"
                    android:inputType="text"
                    android:maxLength="10"
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/start"
                    android:minEms="6"
                    android:text="身份证"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_user_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />

            <LinearLayout
                android:id="@+id/ll_education_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/start"
                    android:minEms="6"
                    android:text="学历"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/education"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/education_type"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_forward" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />

            <LinearLayout
                android:id="@+id/ll_residence_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/start"
                    android:minEms="6"
                    android:text="婚姻状况"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/residence"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/residence_type"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_forward" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />

            <LinearLayout
                android:id="@+id/ll_number_children"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/start"
                    android:minEms="6"
                    android:text="子女人数"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_number_children"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:text=""
                    android:hint="若无子女请填0"
                    android:maxLength="2"
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />

            <LinearLayout
                android:id="@+id/ll_livestatu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/start"
                    android:minEms="6"
                    android:text="居住状况"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_livestatu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_condition"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_forward" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_huijiAddress_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/start"
                    android:minEms="6"
                    android:text="户籍地址"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_huijiaddress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_forward" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/start"
                    android:minEms="6"
                    android:text="详细地址"
                    android:textColor="@color/name"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/ed_detailed_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="详细地址"
                    android:inputType="text"
                    android:padding="6dp"
                    android:maxLength="20"
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />

            <LinearLayout
                android:id="@+id/rl_live_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/start"
                    android:minEms="6"
                    android:text="现居住地址"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_live_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_live_address"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_forward" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/start"
                    android:minEms="6"
                    android:text="详细地址"
                    android:textColor="@color/name"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/residence_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="详细地址"
                    android:inputType="text"
                    android:padding="6dp"
                    android:text=""
                    android:maxLength="20"
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/register_line" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/register_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/start"
                    android:minEms="6"
                    android:text="周最大还款"
                    android:textColor="@color/name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_week_max_repment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:textColor="@color/title"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/loan_bg"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="@string/user_info_bank"
                android:textColor="@color/register_hint"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_openBank"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/start"
                        android:gravity="center_vertical"
                        android:minEms="6"
                        android:text="开户银行"
                        android:textColor="@color/name"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_openbank"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/title"
                        android:textColorHint="#b3b3b3"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_openbank"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_forward" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/register_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/start"
                        android:minEms="6"
                        android:text="银行卡号"
                        android:textColor="@color/name"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/ed_bankno"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:maxLength="22"
                        android:singleLine="true"
                        android:textColor="@color/title"
                        android:textColorHint="#b3b3b3"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/register_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/start"
                        android:minEms="6"
                        android:text="银行预留手机"
                        android:textColor="@color/name"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/ed_bankReservedPhone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/title"
                        android:textColorHint="#b3b3b3"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/register_line" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/register_line_light" />

                <LinearLayout
                    android:id="@+id/ll_client_origin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/start"
                        android:minEms="6"
                        android:text="客户来源"
                        android:textColor="@color/name"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_client_origin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/title"
                        android:textColorHint="#b3b3b3"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_client_origin"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_forward" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/register_line_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:minEms="6"
                        android:paddingLeft="12dp"
                        android:text="QQ号"
                        android:textColor="@color/name"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_qq_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="填写该项，可借额度会提升"
                        android:inputType="text"
                        android:maxLength="20"
                        android:textColor="@color/title"
                        android:textColorHint="#999999"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/register_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:minEms="6"
                        android:paddingLeft="12dp"
                        android:text="微信号"
                        android:textColor="@color/name"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_weixin_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="填写该项，可借额度会提升"
                        android:inputType="text"
                        android:maxLength="20"
                        android:textColor="@color/title"
                        android:textColorHint="#999999"
                        android:textSize="15sp" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/register_line" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/loan_bg"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="@string/user_info_card"
                    android:textColor="@color/register_hint"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/front_id_card_tu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/img_front" />

                    <ImageView
                        android:id="@+id/front_id_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/button_upload" />


                    <ImageView
                        android:id="@+id/back_id_card_tu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/img_back" />

                    <ImageView
                        android:id="@+id/back_id_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/button_upload" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/loan_bg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_front_bank_card_z"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_cardfront" />

                    <ImageView
                        android:id="@+id/iv_front_bank_card_loadup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/button_upload" />


                    <ImageView
                        android:id="@+id/iv_back_bank_card_f"
                        android:layout_width="wrap_content"
