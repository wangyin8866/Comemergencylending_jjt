<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88929292"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_bank_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/shape_fill_white">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:hint="请核实姓名是否有误"
                android:paddingLeft="12dp"
                android:text=""
                android:textColor="@color/font_text"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_bank_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@id/username"
                android:background="@color/loan_bg" />

            <TextView
                android:id="@+id/tv_idcard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/view_bank_line"
                android:gravity="left|center"
                android:hint="请核实身份证号码是否有误"
                android:paddingLeft="12dp"
                android:text=""
                android:textColor="@color/font_text"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_idcard_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@id/tv_idcard"
                android:background="@color/loan_bg" />

            <EditText
                android:id="@+id/ed_detailed_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/view_idcard_line"
                android:background="@null"
                android:hint="请核实户籍地址是否有误"
                android:paddingLeft="12dp"
                android:scrollHorizontally="false"
                android:text=""
                android:textColor="@color/font_text"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_addres"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@id/ed_detailed_address"
                android:background="@color/loan_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/view_addres"
                android:layout_marginTop="5dp"
                android:background="@drawable/shaper_bottom_corner"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shaper_corner_white"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="确定"
                    android:textColor="@color/circle_color"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/register_line"></View>

                <TextView
                    android:id="@+id/begin_scan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shaper_corner_white"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="重新扫描"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_dismisspop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-1dp"
            android:layout_marginTop="-1dp"
            android:src="@drawable/icon_calloff" />
    </RelativeLayout>

</LinearLayout>