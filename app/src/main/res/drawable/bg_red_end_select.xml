<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape>
        <solid android:color="#ff9079" />
        <corners android:topLeftRadius="0dp" android:topRightRadius="10dp"
                 android:bottomRightRadius="10dp" android:bottomLeftRadius="0dp" />
        <stroke android:width="1dp" android:color="#00a8abad" />
    </shape>
</item>
<item android:top="1dp" android:left="1dp" android:right="1dp">
    <shape>
        <solid android:color="#00FFFFFF" />
        <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"
                 android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp" />
        <stroke android:width="0dp" android:color="#ff9079" />
    </shape>
</item>
</layer-list>

